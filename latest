___x_cmd_rm(){
    if [ "$1" = "" ]; then
        local i
        x ui select i "Remove files whose name passed from stdin" yes no
        if [ "$i" = 1 ]; then
            xargs command rm
        fi
        return
    fi

    if [ "$1" = - ]; then
        xargs command rm
        return
    fi

    # TODO: add safely rm facility
    command rm "$@"
    # while [ "$#" -eq 1 ]; do
    #     :
    # fi
}

xrc setmain ___x_cmd_rm
